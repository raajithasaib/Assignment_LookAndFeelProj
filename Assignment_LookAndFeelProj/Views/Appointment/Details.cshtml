@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<header>
    <nav>
        <ul>
            <li><img src="@Url.Content("~/img/logo.png")" alt="Logo"></li>
            <li><a href="@Url.Action("Index", "Home")">Home</a></li>
            <li><a href="@Url.Action("Index", "Doctor")">Doctors</a></li>
            <li><a href="@Url.Action("About", "Home")">About Us</a></li>
            <li><a href="@Url.Action("LogOut", "Account")">Log out</a></li>
        </ul>
    </nav>
    <br><br>
</header>

<h2>Appointment Details</h2>
<table>
    <thead>
        <tr>
            <th>Patient's Name</th>
            <th>Doctor's Name</th>
            <th>Department</th>
            <th>Date</th>
            <th>Time</th>
            <th>Concern</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var appointment in Model.Appointments)
        {
            <tr>
                <td>@appointment.PatientName</td>
                <td>@appointment.DoctorName</td>
                <td>@appointment.Department</td>
                <td>@appointment.Date.ToString("yyyy-MM-dd")</td>
                <td>@appointment.Time.ToString("h:mm tt")</td>
                <td>@appointment.Concern</td>
            </tr>
        }
    </tbody>
</table>

<p>
    <a href="@Url.Action("MyAppointments", "Appointment")" class="btn">Go Back</a>
</p>
