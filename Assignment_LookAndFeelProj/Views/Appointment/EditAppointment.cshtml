@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<header>
    <nav>
        <ul>
            <li><img src="@Url.Content("~/img/logo.png")" alt="Logo"></li>
            <li><a href="@Url.Action("Index", "Home")">Home</a></li>
            <li><a href="@Url.Action("Index", "Doctor")">Doctors</a></li>
            <li><a href="@Url.Action("Index", "Appointment")">My Appointments</a></li>
            <li><a href="@Url.Action("About", "Home")">About Us</a></li>
            <li><a href="@Url.Action("LogOut", "Account")">Log out</a></li>
        </ul>
    </nav>
</header>

<div class="row">
    <div class="col-md-12">
        <h1>Edit your appointment</h1>
        @using (Html.BeginForm("Edit", "Appointment", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            @Html.AntiForgeryToken()

            <div class="form-group">
                <label for="patientName">Patient Name</label>
                @Html.TextBoxFor(model => model.PatientName, new { @class = "form-control", placeholder = "Patient Name*", required = "required" })
            </div>
            <div class="form-group">
                <label for="email">Email ID</label>
                @Html.EmailFor(model => model.Email, new { @class = "form-control", placeholder = "Email Address*", required = "required" })
            </div>
            <div class="form-group">
                <label for="DepartmentName">Department</label>
                @Html.DropDownListFor(model => model.DepartmentId, new SelectList(ViewBag.Departments as IEnumerable, "DepartmentId", "Name"), "--Select Department--", new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label for="DoctorID">Doctor</label>
                @Html.DropDownListFor(model => model.DoctorId, new SelectList(ViewBag.Doctors as IEnumerable, "DoctorId", "Name"), "--Select Doctor--", new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label for="date">Date</label>
                @Html.TextBoxFor(model => model.Date, new { type = "date", @class = "form-control" })
            </div>
            <div class="form-group">
                <label for="time">Time</label>
                @Html.DropDownListFor(model => model.Time, new SelectList(ViewBag.Times as IEnumerable, "Value", "Text"), "--Select Time--", new { @class = "form-control" })
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Save</button>
            </div>
        }
    </div>
</div>
