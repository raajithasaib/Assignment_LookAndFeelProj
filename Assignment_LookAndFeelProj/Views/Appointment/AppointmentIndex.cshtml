@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<nav>
    <ul>
        <li><img src="@Url.Content("~/img/logo.png")" alt="Logo"></li>
        <li><a href="@Url.Content("~/index.html")">Home</a></li>
        <li><a href="@Url.Action("Index", "Doctor")">Doctors</a></li>
        <li><a href="@Url.Action("About", "Home")">About Us</a></li>
        <li><a href="@Url.Action("MyAppointments", "Appointment")" class="btn btn-login">My Appointments</a></li>
    </ul>
</nav>

<main>
    <section class="appointment-section">
        <div class="form-container">
            <h2>Book An Appointment</h2>
            @using (Html.BeginForm("Create", "Appointment", FormMethod.Post, new { id = "appointment-form" }))
            {
                @Html.AntiForgeryToken()

                <input type="text" name="patientName" placeholder="Patient Name*" required>
                <input type="email" name="email" placeholder="Email Address*" required>

                @Html.DropDownList("departmentId", new SelectList(ViewBag.Departments, "Value", "Text"), "Select Department", new { @class = "form-control" })
                @Html.DropDownList("doctorId", new SelectList(ViewBag.Doctors, "Value", "Text"), "Select Doctor", new { @class = "form-control" })

                <input type="date" name="appointmentDate" placeholder="MM/DD/YYYY" required>
                <input type="time" name="appointmentTime" required>

                <button type="submit">Book Appointment</button>
            }
        </div>
        <div class="health-tips-container">
            <h3>Health Tips</h3>
            <ul class="tips-list">
                <li>Stay hydrated to keep your body in good condition.</li>
                <li>Regular exercise can boost your immune system.</li>
                <li>Eating a balanced diet is key to maintaining health.</li>
                <!-- More tips can be added here -->
            </ul>
        </div>
    </section>

</main>
<script src="@Url.Content("~/js/bookappointment.js")"></script> <!-- Assuming you have a separate JS file for functionalities -->
