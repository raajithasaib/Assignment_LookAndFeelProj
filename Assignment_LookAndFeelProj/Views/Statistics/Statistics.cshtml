@{
    Layout = null; // If you don't want to use a layout
                   // Add any necessary using statements here
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>HealHive Statistics</title>
    <link rel="icon" type="image/x-icon" href="@Url.Content("~/img/logo.png")">
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <style>
        body {
            font-family: Arial, sans-serif;
            background: linear-gradient(to bottom right, #8bafc6, #ffffff);
            margin: 0;
            padding: 0;
        }

        /* Ensure that your CSS file includes these rules that apply to all .chart-section elements */
        .chart-section {
            flex: 1;
            flex-basis: calc(50% - 40px);
            margin: 20px;
            position: center;
            width: auto;
            height: auto;
        }

        .pie-chart-container {
            width: 500px;
            height: 600px;
            background-color: white;
            margin-left: 250px;
            margin-top: auto;
        }

        .chart-container {
            width: 80%;
            max-width: 600px;
            margin: auto;
        }

        canvas {
            width: 100%;
            height: auto;
        }

        .insights {
            margin-top: 20px;
            font-size: 0.9em;
            color: #0a0808;
        }

        .bar-graph-container {
            width: 500px;
            height: 600px;
            background-color: white;
            margin-left: auto;
            margin-top: auto;
        }

        h1, h2 {
            color: #0f0e0eec;
            text-align: center;
            font-size: 30px;
        }

        p {
            font-size: 16px;
            line-height: 1.5;
            color: #1b0303e2;
        }
    </style>
</head>
<body>
    <h1>Statistics Dashboard</h1>
    <div class="Dashboard-Container">
        <div class="pie-chart-container">
            <section class="chart-section">
                <h2>Appointment Distribution</h2>
                <canvas id="appointmentsDistribution"></canvas>
                <div class="insights">
                    <p>This pie chart shows the distribution of appointments among doctors, giving a quick view of each doctor's patient load.</p>
                </div>
            </section>
        </div>
        <br><br>
        <div class="bar-graph-container">
            <section class="graph-section">
                <h2>Weekly Appointments</h2>
                <div class="chart-container">
                    <canvas id="weeklyAppointmentsBarChart"></canvas>
                </div>
                <div class="insights">
                    <p>This bar chart displays the number of appointments for each day of the week, providing insight into the busiest days for consultations.</p>
                </div>
            </section>
        </div>
    </div>
    <br><br><br><br>

    <script>document.addEventListener('DOMContentLoaded', function () {
            var ctx = document.getElementById('appointmentsDistribution').getContext('2d');
            var appointmentsDistribution = new Chart(ctx, {
                type: 'pie',
                data: {
                    labels: ['Dr. Dr.Asfi', 'Dr. Danny', 'Dr.Joey', 'Dr. Kenneth', 'Dr. Maria', 'Dr.Shelly'],
                    datasets: [{
                        label: 'Appointment Distribution',
                        data: [12, 19, 3, 5, 2, 7],
                        backgroundColor: [
                            'rgba(255, 99, 132, 0.7)',
                            'rgba(54, 162, 235, 0.7)',
                            'rgba(255, 206, 86, 0.7)',
                            'rgba(75, 192, 192, 0.7)',
                            'rgba(75, 192, 90, 0.7)',
                            'rgba(153, 102, 255, 0.7)'
                        ],
                        borderColor: [
                            'rgba(255, 99, 132, 1)',
                            'rgba(54, 162, 235, 1)',
                            'rgba(255, 206, 86, 1)',
                            'rgba(75, 192, 192, 1)',
                            'rgba(75, 192, 90, 0.7)',
                            'rgba(153, 102, 255, 1)'
                        ],
                        borderWidth: 1
                    }]
                },
                options: {
                    responsive: true,
                    legend: {
                        position: 'top',
                    },
                    animation: {
                        animateScale: true,
                        animateRotate: true
                    }
                }
            });
        });

        document.addEventListener('DOMContentLoaded', function () {
            var ctx2 = document.getElementById('weeklyAppointmentsBarChart').getContext('2d');
            var weeklyAppointmentsBarChart = new Chart(ctx2, {
                type: 'bar',
                data: {
                    labels: ['Monday', 'Tuesday', 'Wednesday', 'Thursday', 'Friday', 'Saturday', 'Sunday'],
                    datasets: [{
                        label: 'Appointments',
                        data: [50, 75, 150, 100, 200, 175, 75],
                        backgroundColor: 'rgba(0, 123, 255, 0.7)',
                        borderColor: 'rgba(0, 123, 255, 1)',
                        borderWidth: 1
                    }]
                },
                options: {
                    scales: {
                        y: {
                            beginAtZero: true
                        }
                    },
                    responsive: true,
                    maintainAspectRatio: false,
                    legend: {
                        position: 'bottom',
                    }
                }
            });
        });</script>
</body>
</html>

